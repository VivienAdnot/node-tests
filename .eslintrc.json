{
    "env": {
        "es6": true,
        "node": true,
        "jest": true
    },
    "extends": [
        "eslint:recommended",
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true
        }
    },
    "plugins": [
        "babel",
        "import"
    ],
    "settings": {
        "import/resolver": {
            "babel-module": {}
        }
    },
    "rules": {
        "indent": ["error",4, { "SwitchCase": 0 }],
        "linebreak-style": ["error", "unix"],
        "quotes": ["error", "single"],
        "semi": ["error", "always"],
        "no-use-before-define": ["error", {
                "functions": false,
                "classes": false
            }
        ],
        "comma-dangle": ["error", "never"],
        "padded-blocks": ["error", "always"],
        "no-underscore-dangle": "off"
    }
}
